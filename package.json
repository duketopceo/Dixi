{
  "name": "dixi",
  "version": "1.0.0",
  "description": "Digital Exploration and Curiosity - AI-powered interactive projection system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:vision",
    "install:frontend": "cd packages/frontend && npm install",
    "install:backend": "cd packages/backend && npm install",
    "install:vision": "cd packages/vision && pip install -r requirements.txt",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:vision": "cd packages/vision && python main.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd packages/backend && npm run start",
    "test": "npm run test:ai",
    "test:all": "npm run test:ai && npm run test:frontend",
    "test:ai": "jest --config tests/jest.config.js packages/backend/src/services/__tests__/",
    "test:ai:watch": "jest --config tests/jest.config.js packages/backend/src/services/__tests__/ --watch",
    "test:ai:coverage": "jest --config tests/jest.config.js packages/backend/src/services/__tests__/ --coverage",
    "test:frontend": "cd packages/frontend && npm run test",
    "test:backend": "cd packages/backend && npm run test",
    "test:backend:unit": "jest --config tests/jest.config.js tests/unit/backend",
    "test:backend:watch": "jest --config tests/jest.config.js tests/unit/backend --watch",
    "test:vision": "cd packages/vision && pytest",
    "test:integration": "jest --config tests/jest.config.js tests/integration --testPathIgnorePatterns=[]",
    "test:e2e": "npx playwright test tests/e2e",
    "test:stress": "jest --config tests/jest.config.js tests/stress --testPathIgnorePatterns=[] --maxWorkers=1",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:nuclear": "node -e \"process.platform === 'win32' ? require('child_process').execSync('powershell -ExecutionPolicy Bypass -File scripts/test-nuclear.ps1', {stdio: 'inherit'}) : require('child_process').execSync('bash scripts/test_everything.sh', {stdio: 'inherit'})\"",
    "test:system": "node -e \"process.platform === 'win32' ? require('child_process').execSync('powershell -ExecutionPolicy Bypass -File scripts/test_everything.ps1', {stdio: 'inherit'}) : require('child_process').execSync('bash scripts/test_everything.sh', {stdio: 'inherit'})\"",
    "kill-port": "node -e \"const p=process.argv[1]; process.platform === 'win32' ? require('child_process').execSync('powershell -ExecutionPolicy Bypass -File scripts/kill-port.ps1 -Port '+p, {stdio: 'inherit'}) : require('child_process').execSync('bash scripts/kill-port.sh '+p, {stdio: 'inherit'})\" --",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "ai",
    "computer-vision",
    "gesture-recognition",
    "interactive-projection",
    "ollama",
    "pytorch",
    "mediapipe"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^6.0.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ws": "^8.14.0"
  },
  "dependencies": {
    "firebase": "^12.7.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "vite": "^7.3.0"
  }
}
